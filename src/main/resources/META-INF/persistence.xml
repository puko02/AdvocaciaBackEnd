<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.2">
    <persistence-unit name="default">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>program.models.UsuariosEntity</class>
        <class>program.models.AnotacaoEntity</class>
        <class>program.models.DisponibilidadeEntity</class>
        <class>program.models.AgendamentoEntity</class>
        <class>program.models.DocumentoEntity</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/seubanco"/>
            <property name="javax.persistence.jdbc.user" value="seuusuario"/>
            <property name="javax.persistence.jdbc.password" value="suasenha"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
