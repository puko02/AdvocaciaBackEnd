<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">mobbobles</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">none</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <mapping class="org.example.model.entities.UsuariosEntity"/>
        <mapping class="org.example.model.entities.AgendamentoEntity"/>
        <mapping class="org.example.model.entities.DocumentosEntity"/>
        <mapping class="org.example.model.entities.AnotacaoEntity"/>
        <mapping class="org.example.model.entities.DisponibilidadeEntity"/>
    </session-factory>
</hibernate-configuration>